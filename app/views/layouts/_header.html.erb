<header>
  <nav>
    <%= link_to image_tag("logo.png", alt: "Logo"), root_path %>
    <ul class="left">
      <li>
        <%# NOTE: root_path and movies_path point to the same location at the moment.  %>
        <%= nav_link_to "Released", movies_path %>
      </li>
      <li>
        <%= nav_link_to "Upcoming", filtered_movies_path(:upcoming) %>
      </li>
      <li>
        <%= nav_link_to "Recent", filtered_movies_path(:recent) %>
      </li>
      <li>
        <%= nav_link_to "Hits", filtered_movies_path(:hits) %>
      </li>
      <li>
        <%= nav_link_to "Flops", filtered_movies_path(:flops) %>
      </li>
    </ul>
    <ul class="right">
      <% if current_user %>
        <li>
          <%= link_to current_user.name, current_user %>
        </li>
        <li>
          <%= link_to "Account Settings", edit_user_path(current_user) %>
        </li>
        <li>
          <%# Link or Button here. Which should I prefer? Or is it really preference? 
              One nice thing about button_to is it is easier to type and read. %>
          <%# link_to "Sign Out", session_path, data: { turbo_method: :delete }, class: "button" %>
          <%= button_to "Sign Out", session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign In", signin_path, class: "button" %>
        </li>
        <li>
          <%= link_to "Sign Up", signup_path, class: "button" %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
